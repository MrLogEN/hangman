         <VBox.margin>
            <Insets bottom="20.0" top="20.0" />
         </VBox.margin>
         <children>
            <Button fx:id="cancelButton" onAction="#handleCancelButtonClick" mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" text="Zrušit" HBox.hgrow="ALWAYS">
               <font>
                  <Font size="20.0" />
               </font>
            </Button>
            <Button fx:id="createRoomButton" onAction="#handleCreateRoomButtonClick" mnemonicParsing="false" prefHeight="50.0" prefWidth="100.0" text="Založit">
               <font>
                  <Font size="20.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
