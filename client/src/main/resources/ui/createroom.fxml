<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<VBox fx:controller="cz.vse.java.hangman.controllers.CreateRoomController" alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="350.0" prefWidth="250.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="errorLabel" alignment="TOP_CENTER" contentDisplay="TOP" text="Založit místnost">
         <font>
            <Font size="25.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="roomNameTextField" alignment="CENTER" promptText="Název místnosti">
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </VBox.margin>
         <font>
            <Font size="20.0" />
         </font>
      </TextField>
      <ComboBox fx:id="roomCapacityComboBox" promptText="Kapacita" />
